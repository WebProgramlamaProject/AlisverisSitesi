@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@model IEnumerable<Category>

<ul class="list-group">
    <li class="list-group-item" style="background: linear-gradient(to left,#19767D,#28347d);">
        <a class="nav-link text-white" asp-controller="Uruns" asp-action="Index" asp-route-categorySlug="">@localizer["Tüm ürünler"]</a>
    </li>

    @foreach (var item in Model)
    {
        <li class="list-group-item" style="background: linear-gradient(to left,#19767D,#28347d);">
            <a class="nav-link text-white" asp-controller="Uruns" asp-action="Index" asp-route-categorySlug=@item.Slug>@item.Name</a>
        </li>
    }
</ul>